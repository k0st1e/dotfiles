{
	"comments": {
		"lineComment": "#"
	},
	"autoCloseBefore": ".,=}] \n\t",
	"brackets": [["[", "]"], ["{", "}"]],
	"autoClosingPairs": [
		{
			"open": "\"",
			"close": "\"",
			"notIn": ["string"]
		},
		{
			"open": "'",
			"close": "'",
			"notIn": ["string", "comment"]
		},
		{
			"open": "[",
			"close": "]"
		},
		{
			"open": "{",
			"close": "}"
		}
	],
	"surroundingPairs": [["\"", "\""], ["'", "'"], ["[", "]"], ["{", "}"]],
	"folding": {
		"markers": {
			"start": "^\\s*// region:\\b",
			"end": "^\\s*// endregion\\b"
		}
	},
	"onEnterRules": [
		{
			"beforeText": "^\\s*#.*$",
			"action": {
				"indent": "none",
				"appendText": "# "
			}
		}
	]
}
